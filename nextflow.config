manifest {
    mainScript = 'phage.nf'
}

// default parameters
params {
  cores = "8"
  mem = "12"
  help = false
  fasta = ''
  fastq = ''
  dir = ''
  list = false

  // folder structure
  output = 'results'
}


profiles {

  standard {
        process.executor = 'local'
        docker { enabled = true }
        params.cpus = params.cores
        process {
            withLabel:metaphinder { container = ' multifractal/metaphinder:latest' }
            withLabel:marvel { container = 'multifractal/marvel:latest' }
            withLabel:deepvirfinder { container = 'multifractal/deepvirfinder:latest' }
            withLabel:virfinder { container = 'multifractal/virfinder:latest' }
	    withLabel:virsorter { container = 'multifractal/virsorter:latest' }
            withLabel:pprmeta { container = 'multifractal/ppr-meta:latest' }

} } }
