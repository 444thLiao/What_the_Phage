manifest {
    mainScript = 'phage.nf'
}

// default parameters
params {
  cores = "8"
  mem = "12"
  help = false
  fasta = ''
  fastq = ''
  dir = ''
  list = false

  workdir = "/tmp/nextflow-phages-$USER"
  //on EBI LSF
  //workdir = "/hps/nobackup2/production/metagenomics/$USER/nextflow-work-$USER"
  cloudDatabase = "/homes/$USER/data/nextflow-databases/"
  cachedir = "/hps/nobackup2/singularity/$USER"

  // folder structure
  output = 'results'
}


profiles {

  standard {
        params.cloudProcess = false
        params.cloudDatabase = false
        includeConfig 'configs/local.config'
  }

 lsf {
        params.cloudProcess = true
        includeConfig 'configs/lsf.config'
 }

}
